{
    "compilerOptions": {
      "jsx": "react",
      "lib": ["es6", "dom"],
      "rootDir": "src",
      "module": "commonjs",
      "esModuleInterop": true, // ! here if you set to false, the import will become "import * as LibName from 'Lib';"
      "target": "es5",
      "sourceMap": true,
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "src",
      "paths": {
        "API": ["api"],
        "Assets": ["assets"],
        "Components": ["components"],
        "Containers": ["containers"],
        "Pages": ["pages"],
        "Theme": ["theme"],
        "Routes": ["routes"],
        "Hooks": ["hooks"],
        "Helper": ["helper"],
        "Mocks": ["mocks"]
      }
    },
    "include": ["src", "setupEnzyme.ts", ".storybook/config.d.ts", "config.d.ts"],
    "exclude": ["node_modules", "build"]
  }
  